<idea-plugin version="2" url="https://github.com/codingbox/idea-parser3">
  <name>Parser for IDEA</name>
  <description><![CDATA[<html><body>
    <p>Support for parser server-side scripting language. More about the language on
    http://parser.ru</p>
    </body></html>]]>
  </description>
  <version>1.0-alpha2b</version>
  <vendor url="http://www.artlebedev.ru/" email="dwr@design.ru">ArtLebedev Studio</vendor>
  <idea-version since-build="93.13"/>

  <depends optional="true">com.intellij.modules.lang</depends>

  <application-components>
    <component>
      <implementation-class>ru.artlebedev.idea.plugins.parser.ParserLoader</implementation-class>
    </component>
    <component>
      <implementation-class>ru.artlebedev.idea.plugins.parser.module.ParserModuleType</implementation-class>
    </component>
    <component>
      <implementation-class>ru.artlebedev.idea.plugins.parser.templates.ParserTemplatesLoader</implementation-class>
    </component>
  </application-components>

  <project-components>
    <component>
      <implementation-class>ru.artlebedev.idea.plugins.parser.settings.ParserProjectConfiguration</implementation-class>
    </component>
    <component>
      <implementation-class>ru.artlebedev.idea.plugins.parser.file.ParserFileTypeLoader</implementation-class>
    </component>
    <component>
      <implementation-class>ru.artlebedev.idea.plugins.parser.indexer.ParserFileIndex</implementation-class>
    </component>
  </project-components>

  <actions>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- extensions decisions -->
    <fileTypeFactory implementation="ru.artlebedev.idea.plugins.parser.file.ParserFileTypeLoader"/>

    <!-- syntax highlighter -->
    <syntaxHighlighter key="Parser"
                       implementationClass="ru.artlebedev.idea.plugins.parser.highlighter.ParserFileSyntaxHighlighter"/>

    <colorSettingsPage implementation="ru.artlebedev.idea.plugins.parser.highlighter.ParserColorsAndFontsPage"/>

    <!-- language extension -->
    <lang.braceMatcher language="Parser"
                       implementationClass="ru.artlebedev.idea.plugins.parser.highlighter.ParserBraceMatcher"/>

    <lang.commenter language="Parser"
                    implementationClass="ru.artlebedev.idea.plugins.parser.highlighter.ParserCommenter"/>

    <lang.parserDefinition language="Parser"
                           implementationClass="ru.artlebedev.idea.plugins.parser.parser.ParserParserDefinition"/>

    <lang.psiStructureViewFactory language="Parser"
                                  implementationClass="ru.artlebedev.idea.plugins.parser.structure.ParserStructureViewFactory"/>

    <lang.refactoringSupport language="Parser"
                             implementationClass="ru.artlebedev.idea.plugins.parser.refactoring.ParserRefactoringSupport"/>

    <lang.documentationProvider language="Parser"
                                implementationClass="ru.artlebedev.idea.plugins.parser.documentation.ParserDocumentationProvider"/>

    <lang.findUsagesProvider language="Parser"
                             implementationClass="ru.artlebedev.idea.plugins.parser.findUsages.ParserFindUsagesProvider"/>

    <lang.formatter language="Parser"
                    implementationClass="ru.artlebedev.idea.plugins.parser.formatter.ParserFormattingModelBuilder"/>

    <lang.fileViewProviderFactory language="Parser"
                                  implementationClass="ru.artlebedev.idea.plugins.parser.file.ParserFileViewProviderFactory"/>

    <!-- CodeInsight (inc. autocomplete) -->
    <codeInsight.parameterInfo language="Parser"
                               implementationClass="ru.artlebedev.idea.plugins.parser.parameterInfo.ParserParameterInfoHandler"/>

    <!-- annotator -->
    <annotator language="Parser"
               implementationClass="ru.artlebedev.idea.plugins.parser.annotator.ParserAnnotator"/>

    <fileIconPatcher implementation="ru.artlebedev.idea.plugins.parser.ide.ParserFileIconPatcher"/>
  </extensions>
</idea-plugin>